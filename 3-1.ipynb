      ],
      "source": [
        "odd_sum = 0\n",
        "\n",
        "for number in range(1, 101):\n",
        "    if number % 2 != 0:\n",
        "        odd_sum += number\n",
        "\n",
        "print(\"1 到 100 中的所有奇數和為:\", odd_sum)\n"
      ]
    }
